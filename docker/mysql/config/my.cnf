# =============================================================================
# MySQL Custom Configuration for Private Blockchain
# =============================================================================
# This file extends the default MySQL configuration with SSL and performance
# settings optimized for blockchain operations.
# =============================================================================

[mysqld]
# =============================================================================
# Character Set and Collation
# =============================================================================
character-set-server=utf8mb4
collation-server=utf8mb4_unicode_ci

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
# SSL is enabled via command line in docker-compose.yml
# These settings provide additional SSL hardening

# Require SSL for all connections (enforced via command line)
require-secure-transport=ON

# Allowed TLS versions (only secure versions)
tls-version=TLSv1.2,TLSv1.3

# Strong cipher suites - MySQL 8.0 uses secure defaults automatically
# The cipher names above are deprecated in MySQL 8.0.44+
# Let MySQL choose optimal ciphers based on TLS version

# =============================================================================
# Performance Settings for Blockchain Workloads
# =============================================================================

# InnoDB Buffer Pool (60% of available RAM for Docker)
# Adjust based on your Docker memory limit
innodb_buffer_pool_size=1G

# InnoDB Log File Size
innodb_log_file_size=256M

# InnoDB Flush Method (optimized for performance)
innodb_flush_method=O_DIRECT

# Maximum Connections
max_connections=200

# Query Cache (disabled in MySQL 8.0+, but keeping for reference)
# query_cache_type=1
# query_cache_size=32M

# =============================================================================
# Binary Logging (for replication/backup)
# =============================================================================
log-bin=mysql-bin
binlog_format=ROW
expire_logs_days=7
max_binlog_size=100M

# =============================================================================
# Slow Query Log (for development/debugging)
# =============================================================================
slow_query_log=1
slow_query_log_file=/var/log/mysql/slow-query.log
long_query_time=2

# =============================================================================
# General Query Log (DISABLED in production, enable for debugging only)
# =============================================================================
# general_log=1
# general_log_file=/var/log/mysql/general.log

# =============================================================================
# Timezone Settings
# =============================================================================
default-time-zone='+00:00'

# =============================================================================
# SQL Mode (strict mode for data integrity)
# =============================================================================
sql_mode=STRICT_TRANS_TABLES,NO_ZERO_IN_DATE,NO_ZERO_DATE,ERROR_FOR_DIVISION_BY_ZERO,NO_ENGINE_SUBSTITUTION

# =============================================================================
# Maximum Allowed Packet Size (for large blockchain data)
# =============================================================================
max_allowed_packet=256M

# =============================================================================
# Connection Timeout
# =============================================================================
wait_timeout=28800
interactive_timeout=28800

[client]
# =============================================================================
# Client Configuration
# =============================================================================
default-character-set=utf8mb4
ssl-ca=/etc/mysql/certs/ca.pem
ssl-cert=/etc/mysql/certs/client-cert.pem
ssl-key=/etc/mysql/certs/client-key.pem
