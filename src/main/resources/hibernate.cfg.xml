<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.community.dialect.SQLiteDialect</property>
        <property name="hibernate.connection.driver_class">org.sqlite.JDBC</property>
        <property name="hibernate.connection.url">jdbc:sqlite:blockchain.db</property>
        
        <!-- Hibernate settings -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">false</property>
        
        <!-- Connection pool settings - FIXED: Increased for concurrent operations -->
        <property name="hibernate.connection.pool_size">10</property>
        
        <!-- SQLite specific settings for concurrency -->
        <property name="hibernate.connection.url">jdbc:sqlite:blockchain.db?journal_mode=WAL</property>
        
        <!-- Improve transaction handling -->
        <property name="hibernate.connection.autocommit">false</property>
        <property name="hibernate.current_session_context_class">thread</property>
        
        <!-- Connection timeout and validation -->
        <property name="hibernate.connection.timeout">20000</property>
        <property name="hibernate.connection.validation_timeout">3000</property>
        
        <!-- Enable the query cache -->
        <property name="hibernate.cache.use_query_cache">false</property>
        
        <!-- Entity mappings -->
        <mapping class="com.rbatllet.blockchain.entity.Block"/>
        <mapping class="com.rbatllet.blockchain.entity.AuthorizedKey"/>
    </session-factory>
</hibernate-configuration>