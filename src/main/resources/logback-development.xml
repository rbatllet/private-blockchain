<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- DEVELOPMENT LOGGING CONFIGURATION -->
    <!-- Optimized for debugging and development workflow -->

    <!-- Console appender with colors for better readability -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for development debugging -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/blockchain-development.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/blockchain-development.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Advanced logging file appender -->
    <appender name="ADVANCED_LOGGING" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/advanced-logging-development.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/advanced-logging-development.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>25MB</maxFileSize>
            <maxHistory>14</maxHistory>
            <totalSizeCap>500MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} [%X{operationId}] [%X{operationType}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Performance metrics file appender -->
    <appender name="PERFORMANCE_METRICS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/performance-metrics-development.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/performance-metrics-development.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>20MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Security events file appender -->
    <appender name="SECURITY_EVENTS" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/security-events-development.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/security-events-development.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>15MB</maxFileSize>
            <maxHistory>60</maxHistory>
            <totalSizeCap>2GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%X{severity}] [%X{userId}] [%X{eventType}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- DEVELOPMENT LEVEL CONFIGURATION -->
    <!-- More verbose for debugging -->

    <!-- Core blockchain operations - detailed logging -->
    <logger name="com.rbatllet.blockchain.core.Blockchain" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Security operations - debug level for development -->
    <logger name="com.rbatllet.blockchain.security" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- DAO operations - info level to see queries -->
    <logger name="com.rbatllet.blockchain.dao" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Search operations - info level for debugging search -->
    <logger name="com.rbatllet.blockchain.search" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Service layer - debug level -->
    <logger name="com.rbatllet.blockchain.service" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Recovery operations - debug level -->
    <logger name="com.rbatllet.blockchain.recovery" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Validation - info level for development -->
    <logger name="com.rbatllet.blockchain.validation" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Advanced logging system - comprehensive tracking -->
    <logger name="com.rbatllet.blockchain.logging.AdvancedLoggingService" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ADVANCED_LOGGING"/>
    </logger>

    <!-- Logging manager - central coordination -->
    <logger name="com.rbatllet.blockchain.logging.LoggingManager" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ADVANCED_LOGGING"/>
    </logger>

    <!-- Operation logging interceptor -->
    <logger name="com.rbatllet.blockchain.logging.OperationLoggingInterceptor" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ADVANCED_LOGGING"/>
    </logger>

    <!-- Performance metrics logger -->
    <logger name="performance.metrics" level="INFO" additivity="false">
        <appender-ref ref="PERFORMANCE_METRICS"/>
    </logger>

    <!-- Security events logger -->
    <logger name="security.events" level="INFO" additivity="false">
        <appender-ref ref="SECURITY_EVENTS"/>
    </logger>

    <!-- External libraries - controlled verbosity -->
    <logger name="org.hibernate" level="INFO"/>
    <logger name="com.zaxxer.hikari" level="INFO"/>
    <logger name="org.sqlite" level="WARN"/>

    <!-- Root logger - info level for development -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>