<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- PRODUCTION LOGGING CONFIGURATION -->
    <!-- Optimized for performance and essential monitoring -->

    <!-- Console appender for immediate visibility -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
        <!-- Only show WARN and ERROR on console in production -->
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
    </appender>

    <!-- File appender for detailed logs -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/blockchain-production.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/blockchain-production.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- PRODUCTION LEVEL CONFIGURATION -->
    <!-- Optimized for performance -->

    <!-- Core blockchain operations - only important events -->
    <logger name="com.rbatllet.blockchain.core.Blockchain" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Security operations - all events for audit -->
    <logger name="com.rbatllet.blockchain.security" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- DAO operations - only errors and warnings -->
    <logger name="com.rbatllet.blockchain.dao" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Search operations - minimal logging for performance -->
    <logger name="com.rbatllet.blockchain.search" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Service layer - warnings and errors only -->
    <logger name="com.rbatllet.blockchain.service" level="WARN" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Recovery operations - info level for monitoring -->
    <logger name="com.rbatllet.blockchain.recovery" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- Validation - errors only -->
    <logger name="com.rbatllet.blockchain.validation" level="ERROR" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </logger>

    <!-- External libraries - minimal logging -->
    <logger name="org.hibernate" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="org.sqlite" level="ERROR"/>

    <!-- Root logger - only warnings and errors -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>