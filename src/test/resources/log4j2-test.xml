<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <!-- Pattern personalitzat per tests -->
        <Property name="PATTERN">%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console per desenvolupament i tests -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${PATTERN}"/>
        </Console>
        
        <!-- File per logs persistents (opcional per tests) -->
        <File name="FileAppender" fileName="logs/test-app.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
    </Appenders>

    <Loggers>
        <!-- Els teus logs d'aplicació -->
        <Logger name="com.rbatllet.blockchain" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Logger>

        <!-- HIBERNATE LOGGERS -->
        <!-- Logs generals de Hibernate -->
        <Logger name="org.hibernate" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- SQL statements - molt útil per debugging -->
        <Logger name="org.hibernate.SQL" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- JDBC bind parameters - ATENCIÓ: pot mostrar dades sensibles -->
        <!-- Descomenta només si necessites debugar parameters -->
        <!--
        <Logger name="org.hibernate.orm.jdbc.bind" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.orm.jdbc.extract" level="TRACE" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        -->
        
        <!-- HikariCP (connection pool) -->
        <Logger name="com.zaxxer.hikari" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        
        <!-- JBoss Logging (Hibernate intern) -->
        <Logger name="org.jboss.logging" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>